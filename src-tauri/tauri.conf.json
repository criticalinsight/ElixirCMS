{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ElixirCMS",
  "version": "0.1.0",
  "identifier": "com.criticalinsight.elixircms",
  "build": {
    "devUrl": "http://localhost:4001",
    "frontendDist": "http://localhost:4001",
    "beforeDevCommand": null,
    "beforeBuildCommand": null
  },
  "app": {
    "windows": [
      {
        "title": "ElixirCMS",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "backgroundColor": "#0f172a"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "externalBin": [
      "bin/publii_ex"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}